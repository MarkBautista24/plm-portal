    <script>

   function setupSelectAll(selectAllId, tableSelector) {
    const selectAllCheckbox = document.getElementById(selectAllId);
    const table = document.querySelector(tableSelector);
    const checkboxes = table.querySelectorAll('tbody input[type="checkbox"]');

    // When "Select All" is clicked
    selectAllCheckbox.addEventListener('change', () => {
        checkboxes.forEach(cb => {
            cb.checked = selectAllCheckbox.checked;
            cb.dispatchEvent(new Event('change')); // ✅ trigger change event
        });
    });

    // If any individual checkbox is changed, update "Select All"
    checkboxes.forEach(cb => {
        cb.addEventListener('change', () => {
            const allChecked = Array.from(checkboxes).every(c => c.checked);
            selectAllCheckbox.checked = allChecked;

            // Update total units
            updateTotalUnits();
        });
    });
}

// Reference to table and total units span
const registrationTable = document.querySelector('.registration-table tbody');
const totalUnitsSpan = document.getElementById('total-units');

function updateTotalUnits() {
    let total = 0;
    registrationTable.querySelectorAll('tr').forEach(row => {
        const checkbox = row.querySelector('input[type="checkbox"]');
        const units = parseInt(row.cells[3].textContent); // 4th column = Units
        if (checkbox.checked) total += units;
    });
    totalUnitsSpan.textContent = `Total Units: ${total}`;
}

// Setup "Select All"
const selectAllCheckbox = document.getElementById('select-all-bottom');
const checkboxes = registrationTable.querySelectorAll('input[type="checkbox"]');

selectAllCheckbox.addEventListener('change', () => {
    checkboxes.forEach(cb => cb.checked = selectAllCheckbox.checked);
    updateTotalUnits(); // ✅ update total units after select all
});

checkboxes.forEach(cb => {
    cb.addEventListener('change', () => {
        // Update "Select All" checkbox status
        selectAllCheckbox.checked = Array.from(checkboxes).every(c => c.checked);
        updateTotalUnits();
    });
});

// Initialize total units on page load
updateTotalUnits();




    // Initialize for your Registration table
   
    setupSelectAll('select-all-bottom', '.registration-table');
        // Get all navigation items
        const navItems = document.querySelectorAll('.nav-item');
        
        navItems.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                const page = this.getAttribute('data-page');
                
                // Handle logout
                if (page === 'logout') {
                    if (confirm('Are you sure you want to logout?')) {
                        alert('Logging out...');
                    }
                    return;
                }
                
                // Remove active class from all nav items
                navItems.forEach(nav => nav.classList.remove('active'));
                
                // Add active class to clicked item
                this.classList.add('active');
                
                // Hide all pages
                document.querySelectorAll('.page-content').forEach(p => {
                    p.classList.remove('active');
                });
                
                // Show selected page
                const selectedPage = document.getElementById(page + '-page');
                if (selectedPage) {
                    selectedPage.classList.add('active');
                }
            });
        });
    </script>
</body>
